<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameDetailActivity">

    <ImageView
        android:id="@+id/game_detail_image_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/skyrim" />



    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="236dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="275dp"
        android:background="@android:color/holo_blue_light"></View>

    <TextView
        android:id="@+id/game_detail_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="188dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/game_detail_release_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/game_detail_platform_id"
        android:layout_toEndOf="@+id/game_detail_name_id"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/game_detail_platform_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="148dp"
        android:layout_toStartOf="@+id/game_detail_name_id"
        android:text="TextView"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/game_detail_trailer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/game_detail_trailer_button_id"
        android:layout_centerHorizontal="true"
        android:text="Assista ao Trailer!"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/game_detail_trailer_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:src="@drawable/play_icon" />


    />

</RelativeLayout>
